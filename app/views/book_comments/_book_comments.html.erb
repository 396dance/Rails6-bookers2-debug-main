<% book.book_comments.each do |book_comment| %>
  <%= image_tag book_comment.user.get_profile_image(100,100) %>
  <%= book_comment.comment %>

  <% if book_comment.user == current_user %>
    <%= link_to "Destroy", book_book_comment_path(book.id, book_comment.id), method: :delete,remote: true, class: "btn btn-danger pull-right" %>
  <% end %>

  <p><%= link_to book_comment.user.name %></p>
<% end %>

